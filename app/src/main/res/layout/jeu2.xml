<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="Rejouer"
        android:id="@+id/boutonRejouer"
    />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_weight="0.02"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="300dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case00"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case01"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case02"
            />

        </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case10"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case11"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case12"
            />


        </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case20"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case21"
            />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/case22"
            />

        </TableRow>

    </TableLayout>
</LinearLayout>